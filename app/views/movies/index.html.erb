<div class='container mt-5'>




  <h1>Movies</h1>

  <table class='table table-hover'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Overview</th>
        <th>Rating</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.title %></td>
          <td><%= movie.overview %></td>
          <td><%= movie.rating %></td>

          <td><button type="button" class="btn btn-danger"><%= link_to "delete", movie_path(movie), method: :delete, data: { confirm: "Are you sure?" } %></button></td>


        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Add Movies", new_movie_path, class: 'btn btn-success mt-3' %>
  <%= link_to 'Back', root_path, class: 'btn btn-success mt-3' %>

  <br>
</div>
