<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQFjl4ryyU53dH03nrCSmhd_GBstljaiFp3ig&usqp=CAU" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">

          <li class="nav-item active">
            <%= link_to "New list", new_list_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "My lists", "#", class: "nav-link" %>
          </li>

      </ul>
    </div>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1504805572947-34fad45aed93?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80);">
  <div class="container">
    <h1><strong>Save any kind of movies</strong>!</h1>
    <div class="d-grid gap-2 col-2 mx-auto">
      <p><%= link_to 'Add a movie list', new_list_path, class: 'btn btn-success' %></p>
    </div>
  </div>
</div>

<div class='container mt-3 px-5'>
  <h2>My lists</h2>
  <div class="row cards">
    <% @lists.each do |list| %>
      <div class="col-4-sm">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.image_url %>')">
             <h3><%= link_to list.name, list_path(list)%></h3>
          </div>
        </div>
      <% end %>
    </div>
</div>
