<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQFjl4ryyU53dH03nrCSmhd_GBstljaiFp3ig&usqp=CAU" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">

          <li class="nav-item active">
            <%= link_to "New list", new_list_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "My lists", "#", class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Movies", movies_path, class: "nav-link" %>
          </li>

      </ul>
    </div>
  </div>
</div>

<div class="banner img-fluid" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://media.istockphoto.com/photos/film-reels-on-black-background-movie-video-and-cinema-prodaction-and-picture-id1336937059?b=1&k=20&m=1336937059&s=170667a&w=0&h=Lg5T5VAhrTRhHmFrWp8cTWRjZrSm-nPkeTpVU2dsZoE=);">
  <div class="container">
    <h1><strong>Save any kind of movies</strong>!</h1>
    <div class="d-grid gap-2 col-2 mx-auto">
      <p class='text-center'><%= link_to 'Add a movie list', new_list_path, class: 'btn btn-success' %></p>
    </div>
  </div>
</div>

<div class='container pb-5'>
  <h2 class='mb-5 pt-3'>My lists</h2>
  <div class="row cards">
      <% @lists.each do |list| %>
        <div class="col-4-sm">
            <% if list.photo.attached? %>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>')">
                <h3><%= link_to list.name, list_path(list)%></h3>
              </div>
            <% end %>
          </div>
      <% end %>
  </div>
</div>
